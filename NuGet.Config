<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <add key="VSOffline" value="%ProgramFiles(x86)%\Microsoft SDKs\NuGetPackages\" />
  </packageSources>

  <packageRestore>
    <!-- Enable automatic package restore -->
    <add key="enabled" value="True" />
    <add key="automatic" value="True" />
  </packageRestore>

  <packageManagement>
    <!-- Format for centralized package management -->
    <add key="format" value="1" />
    <add key="disabled" value="False" />
  </packageManagement>

  <config>
    <!-- Default push source -->
    <add key="defaultPushSource" value="https://api.nuget.org/v3/index.json" />
    <!-- Disable signature validation for better compatibility during development -->
    <add key="signatureValidationMode" value="accept" />
  </config>

  <!-- Override global package source mapping to allow all packages -->
  <packageSourceMapping>
    <clear />
    <packageSource key="nuget.org">
      <!-- Allow all packages from nuget.org -->
      <package pattern="*" />
    </packageSource>
    <packageSource key="VSOffline">
      <!-- Allow all packages from Visual Studio offline -->
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
